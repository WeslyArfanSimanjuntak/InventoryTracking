        function AjaxCall(HandleResult, url, type, duration=750) {
            type = (typeof b !== 'undefined') ? type : "GET";
            $.ajax({
                type: type,
                url: url,
                beforeSend: function () {
                    if (duration > 0) {
                        $('#myModal').modal("show");
                    }
                },
                complete: function () {
                        setTimeout(function () {
                            $('#myModal').modal("hide");
                        }, duration);

                },
                success: function (data) {
                    HandleResult(data);
                },
                error: function (data) {
                    console.log(data);
                }
            });
        }

