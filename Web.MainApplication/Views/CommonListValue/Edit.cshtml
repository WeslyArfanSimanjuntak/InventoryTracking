@model Repository.Application.DataModel.CommonListValue

@{
    ViewBag.Title = "Edit Commont List Value";
}

<div class="card box-solid">
    <div class="card-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-body">
                <div class="card-header with-border">
                    <b class="card-title"> @ViewBag.Title </b>


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)


                    <div>
                        @Html.Label("Parent Id", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownList("ParentId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div>
                        @Html.Label("Value", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div>
                        @Html.Label("Text", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div>
                        @Html.Label("Desc", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Desc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Desc, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div>
                        <div class="col-md-offset-2 col-md-4">
                            @Html.ActionLink("Back", "Index", "CommontListValue", new { @class = "btn btn-default" })
                            <input type="submit" value="Save" class="btn btn-primary" style="background-color:#008CBA; color:white;" />
                        </div>
                    </div>


                </div>

            </div>
        }
    </div>
</div>



<script>
    $(function () {
        $('#CreatedDate').datetimepicker();
        $('#UpdatedDate').datetimepicker();
    });
</script>
