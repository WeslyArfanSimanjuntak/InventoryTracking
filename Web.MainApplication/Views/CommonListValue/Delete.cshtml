@model Repository.Application.DataModel.CommonListValue

@{
    ViewBag.Title = "Delete Commont List Value";
}
<div class="card box-solid">
    <div class="card-body">
        <div class="card-header with-border">
            <b class="card-title">@ViewBag.Title</b>
        </div>

        <div>
            <div class="card-body">
                <div class="row">
                    @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.Value)
                    </div>
                </div>


                <div class="row">
                    @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.Text)
                    </div>
                </div>

                <div class="row">
                    @Html.LabelFor(model => model.Desc, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.Desc)
                    </div>
                </div>



            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="box-footer">
                    @Html.ActionLink("Back", "Index", "commontListValue", new { @Class = "btn btn-default" })
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleted" style="background-color:#008CBA; color:white;">Delete</button>
                    @*<input type="submit" value="Delete" class="btn btn-default" style="background-color:#008CBA; color:white;" />*@
                </div>

                <div class="modal" id="deleted" tabindex="-1" role="dialog">
