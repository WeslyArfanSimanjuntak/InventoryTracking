                                <p><b>Are you sure to delete this common list value?</b></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                @*<button type="button" class="btn btn-primary">Delete</button>*@
                                <input type="submit" value="Delete" class="btn btn-primary" style="background-color:#008CBA; color:white;" />
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>

    </div>
